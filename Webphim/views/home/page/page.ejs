<div class="page">  
    <%
    if ($current_page > 3) {
        $first_page = 1;
        %>
    <a class="page-item" href="?per_page=<?= $item_per_page ?>&page=<?= $first_page ?>"><img src="img/dau1.png" alt=""></a>
    <%
    }
    if ($current_page > 1) {
        $prev_page = $current_page - 1;
        %>
    <a class="page-item" href="?per_page=<?= $item_per_page ?>&page=<?= $prev_page ?>"><img src="img/prev8.png" alt=""></a>
    <% }
    %>
    <% for ($num = 1; $num <= $totalPages; $num++) { %>
        <% if ($num != $current_page) { %>
            <% if ($num > $current_page - 3 && $num < $current_page + 3) { %>
                <a class="page-item" href="?per_page=<?= $item_per_page ?>&page=<?= $num ?>"><% $num %></a>
            <% } %>
        <% } else { %>
            <strong class="numss page-item"><% $num %></strong>
        <% } %>
    <% } %>
    <%
    if ($current_page < $totalPages - 1) {
        $next_page = $current_page + 1;
        %>
        <a class="page-item" href="?per_page=<?= $item_per_page ?>&page=<?= $next_page ?>"><img src="img/next8.png" alt=""></a>
    <%
    }
    if ($current_page < $totalPages - 3) {
        $end_page = $totalPages;
        %>
        <a class="page-item" href="?per_page=<?= $item_per_page ?>&page=<?= $end_page ?>"><img src="img/cuoi1.png" alt=""></a>
    <% } %>
</div>
<style>
    .page{
        justify-content: center ;
        display: flex;
    }
    .page-item{
        margin: 0 3px;
        width: 36px;
        background: #0c2738;
        Color: #fff;
        height: 36px;
        font-size: 16px;
        line-height: 34px;
        text-align: center;
        text-decoration: none;
        padding: 0;
        box-shadow: 0 2px 10px 0 #000000;
    }
    .numss{
        background: #0067fe;
    }
    .page a:hover{
        background: yellow;
    }
    .page img{
        width: 20px;
        height: 20px;
    }
</style>