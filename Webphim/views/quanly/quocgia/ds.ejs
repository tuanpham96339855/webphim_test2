<% include ../layout %>
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2>Danh sách quốc gia</h2>
        </div>
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>STT</th>
                        <th>Tên quốc gia</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(i=0 ; i<data.length ; i++) { %>
                    <tr>
                        <td><%=i+1%></td>
                        <td><%=data[i].TenQuocGia%></td>
                        <td><a href="/admin/quocgia/sua/<%-data[i].ID_QuocGia%>">Sửa</a></td>
                        <td><a onclick="return Del('<%-data[i].TenQuocGia%>')" href="/admin/quocgia/xoa/<%-data[i].ID_QuocGia%>">Xóa</a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
                <a class="btn btn-primary" href="/admin/quocgia/them">Thêm quốc gia</a>
        </div>
    </div>
</div>

<script>
    function Del(name)
    {
        return confirm("Bạn có chắc chắn muốn xóa quốc gia:" + name +"?");
    }
</script>